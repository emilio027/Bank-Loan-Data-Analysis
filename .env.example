# Application Configuration
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production

# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/credit_risk_db
MONGODB_URL=mongodb://localhost:27017/credit_risk_db
REDIS_URL=redis://localhost:6379/0

# Database Credentials
DB_HOST=localhost
DB_PORT=5432
DB_NAME=credit_risk_db
DB_USER=username
DB_PASSWORD=password

# MongoDB Configuration
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=credit_risk_db
MONGO_USER=username
MONGO_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Machine Learning Configuration
ML_MODEL_PATH=./models/
ML_DATA_PATH=./data/
ML_RETRAIN_INTERVAL=24h
ML_BATCH_SIZE=32
ML_EPOCHS=100

# API Keys and External Services
FRED_API_KEY=your-fred-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
QUANDL_API_KEY=your-quandl-api-key
YFINANCE_API_KEY=your-yfinance-api-key

# Power BI Integration
POWERBI_CLIENT_ID=your-powerbi-client-id
POWERBI_CLIENT_SECRET=your-powerbi-client-secret
POWERBI_TENANT_ID=your-powerbi-tenant-id
POWERBI_WORKSPACE_ID=your-powerbi-workspace-id
POWERBI_DATASET_ID=your-powerbi-dataset-id

# Authentication and Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=credit-risk-data-bucket

# Azure Configuration
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_CONTAINER_NAME=credit-risk-container

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_CREDENTIALS_PATH=./gcp-credentials.json

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# Monitoring and Logging
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601

# Model Tracking
MLFLOW_TRACKING_URI=http://localhost:5000
WANDB_PROJECT=credit-risk-intelligence
NEPTUNE_PROJECT=credit-risk/intelligence

# Data Processing
DATA_REFRESH_INTERVAL=1h
DATA_BACKUP_INTERVAL=24h
DATA_RETENTION_DAYS=365

# Risk Management
RISK_THRESHOLD_HIGH=0.7
RISK_THRESHOLD_MEDIUM=0.4
RISK_THRESHOLD_LOW=0.2
MAX_EXPOSURE_LIMIT=1000000

# Credit Scoring
CREDIT_SCORE_MIN=300
CREDIT_SCORE_MAX=850
DEFAULT_PROBABILITY_THRESHOLD=0.1

# Compliance and Regulatory
REGULATORY_REPORTING_ENABLED=true
AUDIT_LOG_ENABLED=true
DATA_RETENTION_COMPLIANCE=true
GDPR_COMPLIANCE=true

# Performance and Caching
CACHE_TTL=3600
REDIS_CACHE_ENABLED=true
DATABASE_POOL_SIZE=20
MAX_CONNECTIONS=100

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_SCORING=true
ENABLE_AUTOMATED_RETRAINING=true
ENABLE_EXPLAINABLE_AI=true

# Development Configuration
TESTING_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_credit_risk_db
DEVELOPMENT_MODE=true
AUTO_RELOAD=true

# Docker Configuration
DOCKER_REGISTRY=your-docker-registry
DOCKER_IMAGE_TAG=latest

# Backup and Recovery
BACKUP_S3_BUCKET=credit-risk-backups
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url
EMAIL_NOTIFICATIONS_ENABLED=true